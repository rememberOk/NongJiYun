<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/app_green"
        android:orientation="horizontal">

        <TextView
            style="@style/app_top_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="选择类型" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_text"
        android:orientation="vertical">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:drawableStart="@drawable/selector_type"
            android:button="@null"
            android:checked="false"
            android:padding="10dp"
            android:text="农科教管理人员" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:drawableStart="@drawable/selector_type"
            android:button="@null"
            android:checked="false"
            android:padding="10dp"
            android:text="专家" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:drawableStart="@drawable/selector_type"
            android:button="@null"
            android:checked="false"
            android:padding="10dp"
            android:text="科研院校" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:drawableStart="@drawable/selector_type"
            android:button="@null"
            android:checked="false"
            android:padding="10dp"
            android:text="农技推广人员" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/selector_type"
            android:button="@null"
            android:checked="false"
            android:padding="10dp"
            android:text="合作社" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:drawableStart="@drawable/selector_type"
            android:button="@null"
            android:checked="false"
            android:padding="10dp"
            android:text="家庭农场" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:drawableStart="@drawable/selector_type"
            android:button="@null"
            android:checked="false"
            android:padding="10dp"
            android:text="企业" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:drawableStart="@drawable/selector_type"
            android:button="@null"
            android:checked="false"
            android:padding="10dp"
            android:text="种养大户" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/selector_type"
            android:button="@null"
            android:checked="false"
            android:padding="10dp"
            android:text="普通农户" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:drawableStart="@drawable/selector_type"
            android:button="@null"
            android:checked="false"
            android:padding="10dp"
            android:text="其他" />


    </LinearLayout>

</LinearLayout>