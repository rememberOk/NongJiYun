<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="app_top_title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/app_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="app_text">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="popuwindow_from_bottom">
        <item name="android:windowEnterAnimation">@animator/popu_show_from_bottom</item>
        <item name="android:windowExitAnimation">@animator/popu_hiden_from_top</item>

    </style>

</resources>
